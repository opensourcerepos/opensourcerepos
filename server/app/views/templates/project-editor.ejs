<form>
  <div class="form-group">
    <!-- <label for="exampleInputEmail1">Blog Title</label> -->
    <% if(blog.title) { %>
      <input type="text" value="<%- blog.title %>" id="project-title"  class="form-control" aria-describedby="blog title" placeholder="Title of blog">
    <% }else { %>
      <input type="text" id="project-title"  class="form-control" aria-describedby="blog title" placeholder="Title of blog">
    <% } %>

    <!-- <small id="titleHelp" class="form-text text-muted">Example - Architecture of React</small> -->
  </div>
  <div class="form-group">
    <!-- <label for="description">Description</label> -->
    <textarea class="form-control" id="project-description">
        <% if(blog.excerpt) { %>
          <%- blog.excerpt %>
        <% } %>
    </textarea>
    <small id="project-description-help" class="form-text text-muted">Blog should be atleast 500 words</small>
  </div>
  <% if(blog.id) { %>
    <input id="project-blog-id" value="<%- blog.id %>" hidden>
  <% }else { %>
    <input id="project-blog-id" hidden>
  <% } %>

  <% if(blog.edit) { %>
    <input id="project-edit" value="true" hidden>
  <% } %>
</form>
